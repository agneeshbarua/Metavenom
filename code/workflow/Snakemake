configfile: "RNASeq_quant_config.yaml"

rule kallisto_quant:
    input:
        fastq=expand("../Salivary-gland/{sample}_{replicate}.fastq", sample=config["samples"], replicate=[1,2])
        #lambda wildcards: config["samples"][wildcards.sample], config["fileno"][wildcards.fileno]
    output:
       directory("./results/output")
    threads: 8
    shell:
        "kallisto quant -i ../Salivary-gland/kallisto/mus_musculus/transcriptome.idx -o {output} -b 100 {input.fastq}"
